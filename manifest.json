{
    "manifest_version": 3,
    "name": "Inject JavaScript Extension",
    "version": "1.0",
    "description": "A simple extension that injects JS into a page.",
    "content_scripts": [
      {
        "matches": ["nts.live"],
        "js": ["content.js"]
      }
    ],
    "permissions": [
      "activeTab"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ]
  }